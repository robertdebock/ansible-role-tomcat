{{ ansible_managed | comment }}
[Unit]
Description={{ instance.name | default(tomcat_name) }}
 
[Service]
User={{ instance.user | default(tomcat_user) }}
Group={{ instance.group | default(tomcat_group) }}
ExecStart={{ instance.directory | default(tomcat_directory) }}/{{ tomcat_archive[instance.version | default(tomcat_version)]['dir'] }}/bin/catalina.sh run
 
[Install]
WantedBy=multi-user.target

